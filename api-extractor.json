{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",
  "mainEntryPointFilePath": "<projectFolder>/build/index.d.ts",
  "bundledPackages": [ ],
  "compiler": {
    // use the build config path
    "tsconfigFilePath": "<projectFolder>/tsconfig.build.json"
  },
  "apiReport": { "enabled": false },
  "docModel": { "enabled": false },
  "dtsRollup": {
    "enabled": true,
    "untrimmedFilePath": "<projectFolder>/lib/index.d.ts"
  },
  "tsdocMetadata": { "enabled": false },
  "newlineKind": "os",
  "messages": {
    "compilerMessageReporting": {
      "default": { "logLevel": "error" }
    },
    "extractorMessageReporting": {
      // not using this feature so disable it's reporting
      "ae-missing-release-tag": { "logLevel": "none" },
      "default": { "logLevel": "error" }
    },
    "tsdocMessageReporting": {
      "default": { "logLevel": "error" }
    }
  }

}
